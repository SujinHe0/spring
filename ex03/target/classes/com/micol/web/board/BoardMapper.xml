<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micol.web.board.BoardMapper">

	<sql id="condition">
		<where>
			<if test="departmentId !=null ">
				DEPARTMENT_ID = #{departmentId}
			</if>
			<if test="firstName">
				AND FIRST_NAME LIKE '%' || #{firstName} || '%'
			</if>
			<if test="employeeIds != null">
				employee_id in
				<foreach collection="employeeIds" item="id" open="("
					close=")" separator=",">
					#{id}
				</foreach>
			</if>
		</where>
	</sql>
	
	<select id="getBrdAll" resultType="boardVO">
		SELECT * FROM TBL_BOARD
	</select>

	<select id="getBrd" parameterType="string" resultType="boardVO">
		SELECT *
		FROM TBL_BOARD
		WHERE BNO = #{bno}
	</select>

	<select id="count" resultType="int">
		SELECT COUNT(*) FROM TBL_BOARD
		<include refid="condition" />
	</select>
</mapper>